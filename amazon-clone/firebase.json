{
  "hosting": {
    "public": "Build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions":{
    "predeploy":[
      "npm --prefix \"$RESOUCE_DIR\" run lint"
    ]
  }
}
